{
  "description": "Minimal JSON schema for InfisicalSecret v1alpha1 to satisfy kubeconform validation in CI.",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": ["secrets.infisical.com/v1alpha1"]
    },
    "kind": {
      "type": "string",
      "enum": ["InfisicalSecret"]
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "hostAPI": { "type": "string" },
        "resyncInterval": { "type": "integer" },
        "authentication": {
          "type": "object",
          "properties": {
            "serviceToken": {
              "type": "object",
              "properties": {
                "serviceTokenSecretReference": {
                  "type": "object",
                  "properties": {
                    "secretName": { "type": "string" },
                    "secretNamespace": { "type": "string" }
                  },
                  "required": ["secretName"]
                }
              }
            }
          }
        },
        "kubernetesAuth": {
          "type": "object",
          "properties": {
            "identityId": { "type": "string" },
            "autoCreateServiceAccountToken": { "type": "boolean" },
            "serviceAccountTokenAudiences": {
              "type": "array",
              "items": { "type": "string" }
            },
            "serviceAccountRef": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "namespace": { "type": "string" }
              },
              "required": ["name"]
            }
          }
        },
        "secretsScope": {
          "type": "object",
          "properties": {
            "projectSlug": { "type": "string" },
            "envSlug": { "type": "string" },
            "secretsPath": { "type": "string" },
            "recursive": { "type": "boolean" }
          }
        },
        "managedSecretReference": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "secretNamespace": { "type": "string" }
          },
          "required": ["secretName"]
        },
        "managedKubeSecretReferences": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretName": { "type": "string" },
              "secretNamespace": { "type": "string" },
              "creationPolicy": { "type": "string" }
            },
            "required": ["secretName"]
          }
        }
      }
    }
  }
}